<!--1. List all the albums in $albums and print their details-->
<!--2. Add a link, for each album of the list, to its show view-->
<a href="/new">Add an album</a>

<% $albums.each_with_index do |album, i| %>
<p><%= album.to_s %> <a href=<%= "/#{i}" %>>Show</a> <a href=<%= "/#{i}/edit" %>>Edit</a> <a href=<%= "/#{i}/delete" %>>Delete</a> </p>
<% end %>
